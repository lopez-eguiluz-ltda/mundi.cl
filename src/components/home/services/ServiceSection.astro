---
import { detailServices } from "@utils/servicesSeed";
import type { AmaiService } from "@utils/types";
import ItemDescription from "./list/ItemDescription.astro";
import ServiceItem from "./list/ServiceItem.astro";
---

<div class="flex flex-col items-start my-24 select-none">
  <div class="px-10 md:px-20 flex flex-col items-start gap-5">
    <h2
      class="text-white font-semibold text-sm border-[1px] border-white rounded-3xl py-1 px-3"
    >
      Servicios
    </h2>

    <h2 class="text-lg sm:text-2xl lg:text-4xl font-bold text-white">
      Atenci√≥n de alta calidad para ti
    </h2>
  </div>

  <div class="flex justify-center w-full">
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5 items-start justify-items-center p-10 w-full lg:w-10/12 xl:w-9/12"
    >
      {
        detailServices.map((service: AmaiService) => (
          <ServiceItem icon={service.icon} title={service.service}>
            {service.descriptions.map((description: string) => (
              <ItemDescription description={description} />
            ))}
          </ServiceItem>
        ))
      }
    </div>
  </div>
</div>
