---
import { detailServices } from "@utils/servicesSeed";
import type { Service } from "@utils/types";
import ItemDescription from "./list/ItemDescription.astro";
import ServiceItem from "./list/ServiceItem.astro";
---

<section
  class="flex flex-col items-start px-10 md:px-20 py-10 md:py-12 scroll-my-32 select-none"
  id="servicios"
>
  <h2
    class="text-white font-semibold text-sm border-[1px] border-white rounded-3xl py-1 px-3"
  >
    Servicios
  </h2>

  <h2 class="text-2xl md:text-4xl font-bold text-white pt-4 pb-10">
    Atenci√≥n de alta calidad para ti
  </h2>

  <div class="flex justify-center w-full">
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5 items-start justify-items-center py-10 md:px-10 w-full lg:w-10/12 xl:w-9/12"
    >
      {
        detailServices.map((service: Service) => (
          <ServiceItem icon={service.icon} title={service.service}>
            {service.descriptions.map((description: string) => (
              <ItemDescription description={description} />
            ))}
          </ServiceItem>
        ))
      }
    </div>
  </div>
</section>
