---
import { teams } from "@utils/teamsSeed";
import type { TeamType } from "@utils/types";
import Person from "./Person.astro";
---

<!-- Nuestro equipo -->
<section
  class="flex flex-col items-start px-10 md:px-20 py-10 md:py-12 scroll-my-32 select-none"
  id="equipo"
>
  <h2
    class="text-white font-semibold text-sm border-[1px] border-white rounded-3xl py-1 px-3"
  >
    Con√≥cenos
  </h2>

  <h2 class="text-4xl font-bold text-white pt-4 pb-10">
    Nuestros especialistas
  </h2>
  <div
    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 justify-items-center gap-y-10 gap-x-5 w-full"
  >
    {
      teams.map((person: TeamType) => (
        <Person
          name={person.name}
          position={person.position}
          photo={person.photo}
          socials={person.socialLink}
        />
      ))
    }
  </div>
</section>
