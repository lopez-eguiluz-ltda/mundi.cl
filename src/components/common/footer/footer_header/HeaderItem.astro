---
import type { IconType } from "react-icons";

interface Props {
  icon: IconType;
}

const { icon: Icon } = Astro.props;
---

<div class="flex flex-col items-center justify-start w-full md:gap-2 px-5">
  <div
    class="p-3 rounded-full bg-white text-accent-normal border-[1px] border-accent-normal hover:bg-accent-normal hover:text-white transition-all duration-300 ease-in-out"
  >
    <Icon size={24} />
  </div>
  <slot />
</div>
