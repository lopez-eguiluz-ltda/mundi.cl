---
import Layout from "../layouts/Layout.astro";

import {
  FaBaby,
  FaAppleWhole,
  FaBrain,
  FaUserNurse,
  FaUserDoctor,
  FaPuzzlePiece,
} from "react-icons/fa6";
import { PiStarFourFill } from "react-icons/pi";
import { MdOutlinePersonalInjury } from "react-icons/md";

import TeamSection from "@/components/team/TeamSection.astro";
import FrontCarousel from "@/components/front_carousel/FrontCarousel";
import FooterCarousel from "@/components/front_carousel/FooterCarousel.astro";
import { RiSpeakFill } from "react-icons/ri";
import { GiHand } from "react-icons/gi";
import ServicesCarousel from "@/components/services/ServicesCarousel";
import Footer from "@/components/footer/FooterSection.astro";
import AboutSection from "@/components/about/AboutSection.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <nav class="fixed z-10 w-full backdrop-blur-sm">
      <div class="flex justify-start items-center px-40 py-8 text-white gap-10">
        <h1 class="text-3xl">Logo Centro amai</h1>
        <h1 class="text-lg">Felipe</h1>
      </div>
    </nav>

    <!-- Carousel principa & footer -->
    <FrontCarousel client:load />
    <FooterCarousel />

    <!-- Carousel de servicios -->
    <ServicesCarousel client:load />

    <!-- Sección -->
    <AboutSection />

    <!-- Nuestro equipo -->
    <TeamSection />

    <!-- Nuestros servicios -->
    <div class="flex flex-col items-start mx-20 mt-24">
      <h2
        class="text-corange text-xs border-[1px] border-corange rounded-3xl py-1 px-3"
      >
        Servicios
      </h2>

      <h2 class="text-4xl font-bold text-white pt-4 pb-10">
        Atención de alta calidad para ti
      </h2>

      <div class="flex justify-center w-full">
        <div
          class="grid grid-cols-1 xl:grid-cols-3 gap-5 justify-items-center items-start w-4/5"
        >
          <!-- Pediatria -->
          <div
            class="flex flex-col justify-center items-center hover:-translate-y-1 transition-all duration-300 ease-in-out"
          >
            <div class="my-4 relative">
              <FaBaby size={48} className="text-white/75 absolute z-10" />
              <div
                class="transform w-12 h-12 translate-x-4 translate-y-4 rounded-full bg-cgreen/30"
              >
              </div>
            </div>

            <h2
              class="text-white font-bold text-lg bg-cgreen px-1 mt-4 mb-2 rounded-md"
            >
              Pediatría
            </h2>

            <ul class="list-inside">
              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Pro lactancia materna</p>
              </li>
              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Pro crianza respetuosa</p>
              </li>
              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Asesores de BLW</p>
              </li>

              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Uso racional de medicamentos</p>
              </li>
            </ul>
          </div>

          <!-- Nutricion -->
          <div
            class="flex flex-col justify-center items-center hover:-translate-y-1 transition-all duration-300 ease-in-out"
          >
            <div class="my-4 relative">
              <FaAppleWhole size={48} className="text-white/75 absolute z-10" />
              <div
                class="transform w-12 h-12 translate-x-4 translate-y-4 rounded-full bg-cgreen/30"
              >
              </div>
            </div>

            <h2
              class="text-white font-bold text-lg bg-cgreen px-1 mt-4 mb-2 rounded-md"
            >
              Nutrición
            </h2>

            <ul class="list-inside">
              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Materno infantil</p>
              </li>
              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Nutrición vegetariana</p>
              </li>
              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Consejería de Lactancia</p>
              </li>
            </ul>
          </div>

          <!-- Psicología -->
          <div
            class="flex flex-col justify-center items-center hover:-translate-y-1 transition-all duration-300 ease-in-out"
          >
            <div class="my-4 relative">
              <FaBrain size={48} className="text-white/75 absolute z-10" />
              <div
                class="transform w-12 h-12 translate-x-4 translate-y-4 rounded-full bg-cgreen/30"
              >
              </div>
            </div>

            <h2
              class="text-white font-bold text-lg bg-cgreen px-1 mt-4 mb-2 rounded-md"
            >
              Psicología
            </h2>

            <ul class="list-inside">
              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Psicología infanto-juvenil</p>
              </li>
              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Expereriencia en TEA</p>
              </li>

              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Asesorías en habilidades parentales</p>
              </li>
            </ul>
          </div>

          <!-- Fonoaudiología -->
          <div
            class="flex flex-col justify-center items-center hover:-translate-y-1 transition-all duration-300 ease-in-out"
          >
            <div class="my-4 relative">
              <RiSpeakFill size={48} className="text-white/75 absolute z-10" />
              <div
                class="transform w-12 h-12 translate-x-4 translate-y-4 rounded-full bg-cgreen/30"
              >
              </div>
            </div>

            <h2
              class="text-white font-bold text-lg bg-cgreen px-1 mt-4 mb-2 rounded-md"
            >
              Fonoaudiología
            </h2>

            <ul class="list-inside">
              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Expereriencia en TEA</p>
              </li>

              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Rechazo alimentario</p>
              </li>
              <li class="flex items-center justify-start gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">
                  Transtornos de lenguaje, habla y deglución
                </p>
              </li>
            </ul>
          </div>

          <!-- Terapia Ocupacional -->
          <div
            class="flex flex-col justify-center items-center hover:-translate-y-1 transition-all duration-300 ease-in-out"
          >
            <div class="my-4 relative">
              <GiHand size={48} className="text-white/75 absolute z-10" />
              <div
                class="transform w-12 h-12 translate-x-4 translate-y-4 rounded-full bg-cgreen/30"
              >
              </div>
            </div>

            <h2
              class="text-white font-bold text-lg bg-cgreen px-1 mt-4 mb-2 rounded-md"
            >
              Terapia Ocupacional
            </h2>

            <ul class="list-inside">
              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">AVD (actividades de la vida diaria)</p>
              </li>

              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Integración sensorial</p>
              </li>
              <li class="flex items-center justify-start gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Rechazo alimentario</p>
              </li>
            </ul>
          </div>

          <!-- Matronería -->
          <div
            class="flex flex-col justify-center items-center hover:-translate-y-1 transition-all duration-300 ease-in-out"
          >
            <div class="my-4 relative">
              <FaUserNurse size={48} className="text-white/75 absolute z-10" />
              <div
                class="transform w-12 h-12 translate-x-4 translate-y-4 rounded-full bg-cgreen/30"
              >
              </div>
            </div>

            <h2
              class="text-white font-bold text-lg bg-cgreen px-1 mt-4 mb-2 rounded-md"
            >
              Matronería
            </h2>

            <ul class="list-inside">
              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">
                  Consejería en salud sexual y reproductiva
                </p>
              </li>

              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Consejería en anticoncepción</p>
              </li>
              <li class="flex items-center justify-start gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Medicina placentaria</p>
              </li>
            </ul>
          </div>

          <!-- Medicina General -->
          <div
            class="flex flex-col justify-center items-center hover:-translate-y-1 transition-all duration-300 ease-in-out"
          >
            <div class="my-4 relative">
              <FaUserDoctor size={48} className="text-white/75 absolute z-10" />
              <div
                class="transform w-12 h-12 translate-x-4 translate-y-4 rounded-full bg-cgreen/30"
              >
              </div>
            </div>

            <h2
              class="text-white font-bold text-lg bg-cgreen px-1 mt-4 mb-2 rounded-md"
            >
              Medicina General
            </h2>

            <ul class="list-inside">
              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Medicina biorreguladora</p>
              </li>
              <li class="flex items-center justify-start gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Medicina ortomolecular</p>
              </li>
              <li class="flex items-center justify-start gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Fitoterapia clínica</p>
              </li>
            </ul>
          </div>

          <!-- Kinesiología -->
          <div
            class="flex flex-col justify-center items-center hover:-translate-y-1 transition-all duration-300 ease-in-out"
          >
            <div class="my-4 relative">
              <MdOutlinePersonalInjury
                size={48}
                className="text-white/75 absolute z-10"
              />
              <div
                class="transform w-12 h-12 translate-x-4 translate-y-4 rounded-full bg-cgreen/30"
              >
              </div>
            </div>

            <h2
              class="text-white font-bold text-lg bg-cgreen px-1 mt-4 mb-2 rounded-md"
            >
              Kinesiología
            </h2>

            <ul class="list-inside">
              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Rehabilitación musculoesquelética</p>
              </li>

              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Reintegro deportivo</p>
              </li>
              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Masoterapia, crioterapia & ultrasonido</p>
              </li>
              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Electroestimulación</p>
              </li>
            </ul>
          </div>

          <!-- Psicopedagogía -->
          <div
            class="flex flex-col justify-center items-center hover:-translate-y-1 transition-all duration-300 ease-in-out"
          >
            <div class="my-4 relative">
              <FaPuzzlePiece
                size={48}
                className="text-white/75 absolute z-10"
              />
              <div
                class="transform w-12 h-12 translate-x-4 translate-y-4 rounded-full bg-cgreen/30"
              >
              </div>
            </div>

            <h2
              class="text-white font-bold text-lg bg-cgreen px-1 mt-4 mb-2 rounded-md"
            >
              Psicopedagogía
            </h2>

            <ul class="list-inside">
              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Expereriencia en TEA</p>
              </li>

              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Competencias en Evaluación de N.E.E</p>
              </li>

              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Intervención Psicopedagógica</p>
              </li>

              <li class="flex items-center gap-2">
                <PiStarFourFill className="text-corange" />
                <p class="font-light">Evauaciones Psicopedagógicas</p>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

